<ul>
  <li>
    <%= link_to 'Add Article', new_article_path %>
  </li>
</ul>
<h1>Articles Details</h1>
<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <th>Action</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>

      <td><%= article.title %></td>
      <td></td>
      <td><%= article.text %></td>
      <td></td>
      <td><%= link_to 'View', article_path(article) %></td>
      <td></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<style type="text/css">
  table,th,td {
    border:1px solid black;
    border-collapse: collapse;
  }
</style>
<button><%= link_to 'Add Product', new_product_path %></button>
<h1>Cosmetic Product Details</h1>
<table>
    <thead>
        <tr>
          <th>Sr.no.</th>
          <th>Name</th>
          <th>Price <small>(In $)</small></th>
          <th>Description</th>
          <th>Expiry Date</th>
          <th colspan="3">Action</th>
        </tr>
      
    </thead>
 <%= 
    # number_to_currency(1234567890) 
    # number_to_human_size(1234)
    # number_to_human_size(1234567)
    # number_to_percentage(100, precision: 0)
    # number_to_phone(9876543210)
    # number_with_delimiter(9876543210)
  %>
  <%
  @srno = 0
  @product.each do |product| 
    @srno = @srno + 1
  %>
    <tr>
      <td><%= @srno %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= product.expiry_date %></td>
      <td><button><%= link_to 'View', product %></button></td>
      <td><button><%= link_to 'Edit', edit_product_path(product) %></button></td>
      <td><button><%= link_to 'Delete', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure,you want to delete?' } %></button></td>
    </tr>
  <% end %>
</table>
<br>
